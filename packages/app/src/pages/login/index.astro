---
import { BsGoogle } from "solid-icons/bs";
import PageLayout from "~/layouts/PageLayout.astro";
---

<PageLayout seo={{ title: "Login" }}>
  <div class="flex flex-1 items-center justify-center p-2">
    <div
      class="flex w-full max-w-sm flex-col gap-8 rounded-2xl border border-neutral-200 bg-white p-4 shadow-xl sm:p-8"
    >
      <h1 class="text-center text-3xl font-bold">Login</h1>
      <div class="flex flex-col items-stretch gap-2">
        <a href="/login/google">
          <button
            class="w-full gap-4 flex items-center justify-start cursor-pointer hover:bg-gray-100 transition duration-75 rounded-lg px-4 py-2"
          >
            <BsGoogle class="h-4 w-4" />
            <p class="font-semibold">Continue with Google</p>
          </button>
        </a>
      </div>
    </div>
  </div>
</PageLayout>
